# Set system timezone
ln -sf /usr/share/zoneinfo/America/Sao_Paulo /etc/localtime
hwclock --systohc

# After configuring locale files
locale-gen

# Configure wpa_supplicant and systemd-network (for wlp2s0)
wpa_passphrase $SSID $WPA_PSK > /etc/wpa_supplicant/wpa_supplicant-wlp2s0.conf
systemctl enable wpa_supplicant@wlp2s0
systemctl enable systemd-networkd
systemctl enable systemd-resolved

# After installinf refind and intel/amd-ucode
# Edit /boot/refind_linux.cong with PARTID and ucode

# re-populate keys
pacman-key --init
pacman-key --populate archlinux

# Common user
useradd -m -g users -G wheel -s /bin/bash rogervnUai-Fi
passwd rogervn

# After installing util-linux
systemctl enable fstrim.timer

# install yay
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si
