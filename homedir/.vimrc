""" 4 space tab
"""
"""
filetype plugin indent on
" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab

" Syntax highlighting
syntax enable

" Show last command
set showcmd

" Autocomplete menu in commands
set wildmenu

" Show matching [{}]
set showmatch

" Highlight searches
set hlsearch

" Colors
colorscheme elflord
